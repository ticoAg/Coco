{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Coco",
  "mainBinaryName": "coco",
  "version": "1.2.2",
  "identifier": "dev.coco.coco",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "additionalWatchFolders": [
      "app-icon.svg",
      "icons"
    ],
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Coco",
        "width": 900,
        "height": 650,
        "minWidth": 900,
        "minHeight": 650,
        "resizable": true,
        "fullscreen": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "app",
    "macOS": {
      "bundleName": "Coco"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
